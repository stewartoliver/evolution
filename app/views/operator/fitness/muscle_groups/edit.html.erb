<div class="flex flex-col items-center p-5 pt-20">
	<div class="font-bold text-sky-900">
		Edit Muscle Group
	</div>
	<div class="w-full">
		<%= form_for([:operator, :fitness, @muscle_group]) do |form| %>
		<div class="flex flex-col gap-4">
			<div>
				<%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
				<%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" %>
			</div>
			<div class="flex items-center justify-end">
				<%= form.submit "Create", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
			</div>
		</div>
		<% end %>
	</div>
</div>