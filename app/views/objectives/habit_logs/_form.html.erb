<%= form_for([:objectives, @habit, @habit_log]) do |f| %>
  <div class="flex flex-col gap-4">
    <div class="flex items-center gap-2">
      <div class="flex flex-col gap-1 w-full">
        <%= f.label :occurrences, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
        <%= f.number_field :occurrences, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
      </div>
      <div class="flex flex-col gap-1 w-full">
        <%= f.label :mood, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
        <%= f.select :mood, [['Great', 'great'], ['Good', 'good'], ['Neutral', 'neutral'], ['Bad', 'bad'], ['Terrible', 'terrible']], { include_blank: true }, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <div class="flex flex-col gap-1 w-full">
        <%= f.label :difficulty_level, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
        <%= f.select :difficulty_level, (1..5).map { |n| [n, n] }, { include_blank: true }, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
      </div>
      <div class="flex flex-col gap-1 w-full">
        <%= f.label :location, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
        <%= f.text_field :location, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
      </div>
    </div>

    <div class="flex flex-col gap-1">
      <%= f.label :time_of_day, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
      <%= f.time_field :time_of_day, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
    </div>

    <div class="flex flex-col gap-1">
      <%= f.label :notes, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
      <div>
        <%= f.text_area :notes, rows: 3, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full resize-y" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Save", class: "btn" %>
    </div>
  </div>
<% end %> 