<div class="subtask flex items-center gap-2 py-1" data-subtask-id="<%= subtask.id %>">
  <div class="flex items-center gap-2 flex-1">
    <%= check_box_tag "task[subtasks_attributes][#{subtask.id}][status]",
                     2,
                     subtask.status == 'done',
                     class: "subtask-status h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500",
                     data: { 
                       action: "change->task#toggleSubtask",
                       subtask_id: subtask.id
                     } %>
    
    <div class="flex-1">
      <%= text_field_tag "task[subtasks_attributes][#{subtask.id}][title]",
                        subtask.title,
                        class: "subtask-title w-full bg-transparent border-none focus:ring-0 #{subtask.status == 'done' ? 'line-through text-gray-500' : ''}",
                        data: { 
                          action: "blur->task#updateSubtask",
                          subtask_id: subtask.id
                        } %>
    </div>
  </div>

  <button type="button" 
          class="text-gray-400 hover:text-red-500"
          data-action="click->task#removeSubtask"
          data-subtask-id="<%= subtask.id %>">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
</div> 