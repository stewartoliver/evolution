<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				Habit Details
			</div>
			<div class="text-gray-500 text-sm">
				/habits/<%= @habit.id %>
			</div>
		</div>
		<div class="flex flex-col divide-y divide-gray-200">
			<div class="py-4"> <!-- Adding padding for space -->
				<div class="text-gray-700 font-medium text-sm">
					Name:
				</div>
				<div class="text-gray-500 text-sm">
					<%= @habit.name %>
				</div>
			</div>
			<div class="py-4">
				<div class="text-gray-700 font-medium text-sm">
					Description:
				</div>
				<div class="text-gray-500 text-sm">
					<%= @habit.description.present? ? @habit.description : "No description provided." %>
				</div>
			</div>
			<div class="py-4">
				<div class="text-gray-700 font-medium text-sm">
					Frequency:
				</div>
				<div class="text-gray-500 text-sm">
					<%= @habit.frequency %>
				</div>
			</div>
			<div class="py-4">
				<div class="text-gray-700 font-medium text-sm">
					Target Occurrences:
				</div>
				<div class="text-gray-500 text-sm">
					<%= @habit.target_occurrences %> times per <%= @habit.frequency.downcase %>
				</div>
			</div>
			<div class="py-4">
				<div class="text-gray-700 font-medium text-sm">
					Related Goal:
				</div>
				<div class="text-sky-500">
					<% if @habit.goal.present? %>
					<%= link_to @habit.goal.title, objectives_goal_path(@habit.goal), class: "underline" %>
					<% else %>
					No goal associated with this habit.
					<% end %>
				</div>
			</div>
			<div class="py-4">
				<div class="text-gray-700 font-medium text-sm">
					Related Task:
				</div>
				<div class="text-sky-500">
					<% if @habit.task.present? %>
					<%= link_to @habit.task.title, objectives_task_path(@habit.task), class: "underline" %>
					<% else %>
					No task associated with this habit.
					<% end %>
				</div>
			</div>
			<div class="py-4 flex justify-end">
				<%= link_to 'Edit Habit', edit_objectives_habit_path(@habit), class: "sky-btn" %>
			</div>
		</div>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-white p-5 h-screen">
		<div class="habit-log-form" data-habit-id="<%= @habit.id %>" data-habit-name="<%= @habit.name %>"></div>
	</div>
</div>
