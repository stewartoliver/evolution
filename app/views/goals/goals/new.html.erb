<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				Create Goal
			</div>
			<div class="text-gray-500 text-sm">
				/goals /new
			</div>
		</div>
		<%= form_for([:goals, @goal]) do |form| %>
		<div class="flex flex-col gap-2">
			<div>
				<%= form.label :title, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_field :title, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :description, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500 resize-y" %>
			</div>
			<div class="flex items-center gap-2">
				<div class="w-full">
					<%= form.label :start_date, class: "text-sm font-medium text-gray-700" %>
					<%= form.date_field :start_date, value: Time.current.to_date.strftime("%Y-%m-%d"), class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" %>
				</div>
				<div class="w-full">
					<%= form.label :end_date, class: "text-sm font-medium text-gray-700" %>
					<%= form.date_field :end_date, value: Time.current.to_date.strftime("%Y-%m-%d"), class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" %>
				</div>
			</div>
			<div>
				<%= form.label :notes, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_area :notes, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500 resize-y" %>
			</div>
			<div class="flex">
				<%= form.submit "Create", class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-800 hover:bg-sky-700 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 w-full" %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-white p-5">

	</div>
</div>