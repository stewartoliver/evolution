<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<%= link_to "Back", :back, class: "text-gray-500 underline whitespace-nowrap w-min" %>
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				<%= @goal.title %>
			</div>
			<div class="text-gray-500 text-sm">
				/goals / <%= @goal.id %>
			</div>
		</div>
		<div class="flex flex-col gap-2">
			<div>
				<div class="text-gray-700 font-medium text-sm">
					Description:
				</div>
				<div class="text-gray-500 bg-white border-gray-300 border rounded-md px-4 py-2 text-sm">
					<%= @goal.description %>
				</div>
			</div>
			<div>
				<div class="text-gray-700 font-medium text-sm">
					Start date:
				</div>
				<div class="text-gray-500 bg-white border-gray-300 border rounded-md px-4 py-2 text-sm">
					<%= @goal.start_date.strftime("%-d %B %Y") %> 
				</div>
			</div>
			<div>
				<div class="text-gray-700 font-medium text-sm">
					End date:
				</div>
				<div class="text-gray-500 bg-white border-gray-300 border rounded-md px-4 py-2 text-sm">
					<%= @goal.end_date.strftime("%-d %B %Y") %> 
				</div>
			</div>
			<div>
				<div class="text-gray-700 font-medium text-sm">
					Progress:
				</div>
				<div class="text-gray-500 bg-white border-gray-300 border rounded-md px-4 py-2 text-sm">
					<%= @goal.progress %> (<%= @goal.status %>)
				</div>
			</div>
			<div class="flex justify-end">
				<%= link_to "Edit", edit_goals_goal_path(@goal), class: "sky-btn" %>
			</div>
		</div>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-stone-200 p-5 h-screen">
		<div id="board-root" data-goal-id="<%= @goal.id %>"></div>
	</div>
</div>