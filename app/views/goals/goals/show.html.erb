<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<%= link_to "Back", :back, class: "text-gray-500 underline" %>
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				Showing goal
			</div>
			<div class="text-gray-500 text-sm">
				/goals /new
			</div>
		</div>
		<div class="flex flex-col gap-5">
			<div class="leading-tight">
				<div class="text-xl font-semibold text-sky-900">
					<%= @goal.title %>
				</div>
				<div class="text-gray-500">
					<%= @goal.description %>
				</div>
			</div>
			<div class="flex gap-1">
				<div class="text-sky-900 font-semibold">
					Start date:
				</div>
				<div class="text-gray-500">
					<%= @goal.start_date.strftime("%-d %b %y") %> 
				</div>
			</div>
			<div class="flex gap-1">
				<div class="text-sky-900 font-semibold">
					End date:
				</div>
				<div class="text-gray-500">
					<%= @goal.end_date.strftime("%-d %b %y") %> 
				</div>
			</div>
			<div class="flex flex-col gap-1">
				<div class="text-sky-900 font-semibold">
					Notes:
				</div>
				<div>
					<%= @goal.notes %>
				</div>
			</div>
		</div>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-white p-5">

	</div>
</div>