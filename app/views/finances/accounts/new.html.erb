<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<%= link_to "Back", :back, class: "text-gray-500 underline whitespace-nowrap w-min" %>
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				Create Account
			</div>
			<div class="text-gray-500 text-sm">
				/finances /accounts /new
			</div>
		</div>
		<%= form_for([:finances, @account]) do |form| %>
		<div class="flex flex-col gap-2">
			<div>
				<%= form.label :account_name, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_field :account_name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :account_type, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_field :account_type, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :balance, class: "text-sm font-medium text-gray-700" %>
				<%= form.number_field :balance, step: "0.01", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div class="flex">
				<%= form.submit "Create", class: "inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-800 hover:bg-sky-700 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 w-full" %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-white p-5">
		<!-- Add any additional content here -->
	</div>
</div>
