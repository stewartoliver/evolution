<!-- app/views/shared/_frontend_flash_messages.html.erb -->
<% flash.each do |key, message| %>
<% alert_type = case key.to_sym
when :notice then 'bg-green-100 border-green-400 text-green-700'
when :alert then 'bg-red-100 border-red-400 text-red-700'
when :error then 'bg-red-100 border-red-400 text-red-700'
else 'bg-gray-100 border-gray-400 text-gray-700'
 end %>
 <div class="<%= alert_type %> flex flex-col tracking-tight leading-tight py-2 border px-4 rounded-md">
  <strong class="font-bold"><%= key.capitalize %>:</strong>
  <span class="block sm:inline"><%= message %></span>
</div>
<% end %>
