<div class="flex flex-col lg:flex-row">
  <div class="flex flex-col gap-5 lg:w-1/3 p-5">
    <%= link_to "Back", :back, class: "text-gray-500 underline whitespace-nowrap w-min" %>
    <div class="flex flex-col tracking-tight leading-tight">
      <div class="text-2xl font-bold uppercase text-sky-900">
        Sign in to evolve
      </div>
      <div class="text-gray-500 text-sm">
        /sign-in
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-4">
      <div>
        <%= f.label :email, class: "text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <div>
        <%= f.label :password, class: "text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me, class:"rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        <%= f.label :remember_me, class: "text-sm font-medium text-gray-700" %>
      </div>
      <% end %>
      <div class="flex justify-end">
        <%= f.submit "Log in", class:"sky-btn" %>
      </div>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="flex flex-col w-full bg-sky-900 text-white p-5 h-screen">
    <!-- Add any additional content here -->
  </div>
</div>
