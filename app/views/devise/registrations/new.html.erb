<div class="flex flex-col items-center">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex flex-col gap-4">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "uppercase text-gray-600 text-sm" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md border-gray-400 px-2 py-1 focus:border-sky-500 focus:ring-0 w-full" %>
    </div>

    <div class="field">
      <div class="flex gap-1 items-center">
        <%= f.label :password, class: "uppercase text-gray-600 text-sm" %>
        <% if @minimum_password_length %>
        <span class="uppercase text-gray-600 text-xs">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md border-gray-400 px-2 py-1 focus:border-sky-500 focus:ring-0 w-full" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "uppercase text-gray-600 text-sm" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md border-gray-400 px-2 py-1 focus:border-sky-500 focus:ring-0 w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "rounded-md p-4 bg-sky-400 text-white font-bold tracking-wide w-full text-sm" %>
    </div>
  </div>
  <% end %>
</div>


<%= render "devise/shared/links" %>
