<div class="flex flex-col lg:flex-row">
  <div class="flex flex-col gap-5 lg:w-1/3 p-5">
    <div class="flex flex-col tracking-tight leading-tight">
      <div class="text-2xl font-bold uppercase text-sky-900">
        Edit Profile
      </div>
      <div class="text-gray-500 text-sm">
        /profile /edit
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="flex flex-col gap-2">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.label :email, class: "text-sm font-medium text-gray-700" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="flex items-center gap-2">
        <div class="w-full">
          <%= f.label :first_name, class: "text-sm font-medium text-gray-700" %><br />
          <%= f.text_field :first_name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
        <div class="w-full">
          <%= f.label :last_name, class: "text-sm font-medium text-gray-700" %><br />
          <%= f.text_field :last_name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
      </div>
      <div>
        <%= f.label :date_of_birth, class: "text-sm font-medium text-gray-700" %><br />
        <%= f.date_field :date_of_birth, start_year: Time.now.year - 100, end_year: Time.now.year, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-full">
          <%= f.label :height, class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :height, step: 0.1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
        <div class="w-1/2">
          <%= f.label :preferred_units, class: "text-sm font-medium text-gray-700" %>
          <%= f.select :preferred_units, [['Metric', 'metric'], ['Imperial', 'imperial']],{}, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" } %>
        </div>
      </div>
      <div>
        <%= f.label :gender, class: "text-sm font-medium text-gray-700" %>
        <%= f.select :gender, [['Male', 'male'], ['Female', 'female'], ['Other', 'other']], { prompt: 'Select Gender' }, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" } %>
      </div>
      <div>
        <%= f.label :activity_level, class: "text-sm font-medium text-gray-700" %>
        <%= f.select :activity_level, [['Sedentary', 0], ['Lightly Active', 1], ['Active', 2], ['Very Active', 3]], { prompt: 'Select Activity Level' }, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500 sm:text-sm text-gray-500" } %>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-full">
          <%= f.label :current_weight, class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :current_weight, step: 0.1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
        <div class="w-full">
          <%= f.label :goal_weight, class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :goal_weight, step: 0.1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-full">
          <%= f.label :current_calorie_intake, class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :current_calorie_intake, step: 0.1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
        <div class="w-full">
          <%= f.label :target_calorie_intake, class: "text-sm font-medium text-gray-700" %>
          <%= f.number_field :target_calorie_intake, step: 0.1, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
        </div>
      </div>
      <div>
        <%= f.label :password, class: "text-sm font-medium text-gray-700" %><i class="text-xs font-medium text-gray-500">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <div>
        <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <div>
        <%= f.label :current_password, class: "text-sm font-medium text-gray-700" %><i class="text-xs font-medium text-gray-500">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
      </div>
      <div class="flex justify-end">
        <%= f.submit "Update", class: "sky-btn" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="flex flex-col w-full bg-sky-900 text-white p-5 h-screen">
    <h3>Cancel my account</h3>
    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
    <%= link_to "Back", :back %>
  </div>
</div>