<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<%= link_to "Back", :back, class: "text-gray-500 underline whitespace-nowrap w-min" %>
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-xl font-bold uppercase text-sky-900">
				New Exercise
			</div>
			<div class="text-gray-500 text-sm">
				/fitness /exercises /new
			</div>
		</div>
		<%= form_for([:fitness, @exercise]) do |form| %>
		<div class="flex flex-col gap-2">
			<div>
				<%= form.label :name, class: "text-sm font-medium text-gray-700" %>
				<%= form.text_field :name, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :muscle_group_id, class: "block text-sm font-medium text-gray-700" %>
				<%= form.collection_select :muscle_group_id, MuscleGroup.all, :id, :name, { prompt: "Select a type" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :exercise_type_id, "Exercise Type", class: "block text-sm font-medium text-gray-700" %>
				<%= form.collection_select :exercise_type_id, ExerciseType.all, :id, :name, { prompt: "Select a type" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500" %>
			</div>
			<div>
				<%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
				<%= form.text_area :description, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-0 sm:text-sm text-gray-500", rows: 3 %>
			</div>
			<div class="flex justify-end">
				<%= form.submit "Create", class: "sky-btn" %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="flex flex-col w-full bg-sky-900 text-stone-200 p-5 h-screen">
	</div>
</div>