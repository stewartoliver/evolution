<main class="flex-1 p-6 bg-background-light dark:bg-background-dark text-text-light dark:text-text-dark">
	<div class="flex flex-col lg:flex-row gap-4 lg:gap-6">
		<div class="flex flex-col gap-6 lg:w-1/3 p-6 bg-background-card dark:bg-background-card-dark rounded-lg shadow-md">
			<!-- Header Section -->
			<div class="flex justify-between items-center">
				<%= link_to :back, class: "flex gap-1 items-center font-semibold text-text-light dark:text-text-dark hover:opacity-80 whitespace-nowrap w-min" do %>
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
					<path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
				</svg>
				Back
				<% end %>
			</div>
			<div class="flex flex-col tracking-tight leading-tight">
				<div class="text-4xl font-bold uppercase">
					New Exercise
				</div>
			</div>
			<%= form_for([:fitness, @exercise]) do |form| %>
			<div class="flex flex-col gap-4">
				<div>
					<%= form.label :name, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
					<%= form.text_field :name, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
				</div>
				<div>
					<%= form.label :description, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
					<%= form.text_area :description, rows: 3, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
				</div>
				<div class="flex items-center gap-2">
					<div class="w-full">
						<%= form.label :muscle_group_id, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
						<%= form.collection_select :muscle_group_id, MuscleGroup.all, :id, :name, { prompt: "Select a type" }, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
					</div>
					<div class="w-full">
						<%= form.label :exercise_type_id, class: "text-sm font-medium text-text-sub dark:text-text-sub-dark" %>
						<%= form.collection_select :exercise_type_id, ExerciseType.all, :id, :name, { prompt: "Select a type" }, class: "rounded-md border bg-background-input-light dark:bg-background-input-dark text-text-light dark:text-text-dark border-border-light dark:border-border-dark font-medium text-sm focus:ring-0 w-full" %>
					</div>
				</div>
				<div class="flex justify-end">
					<%= form.submit "Update", class: "btn" %>
				</div>
			</div>
			<% end %>
		</div>

		<!-- Board Section -->
		<div class="flex flex-col w-full">
		</div>
	</div>
</main>