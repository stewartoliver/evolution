<div class="flex flex-col lg:flex-row">
  <div class="flex flex-col gap-5 lg:w-1/3 p-5">
    <div class="flex flex-col tracking-tight leading-tight">
      <div class="text-2xl font-bold uppercase text-sky-900">
        Fitness Log
      </div>
      <div class="text-gray-500 text-sm">
        /fitness /log /show
      </div>
    </div>
    <div class="flex flex-col gap-5">
      <div class="flex items-center gap-4">
        <div class="flex flex-col">
          <label class="text-sm font-medium text-gray-700">Date</label>
          <div class="text-gray-500 sm:text-sm">
            <%= @log.date.strftime("%Y-%m-%d") %>
          </div>
        </div>
        <div class="flex flex-col">
          <label class="text-sm font-medium text-gray-700">Time</label>
          <div class="text-gray-500 sm:text-sm">
            <%= @log.time.strftime("%H:%M") %>
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <label class="text-sm font-medium text-gray-700">Notes</label>
        <div class="text-gray-500 sm:text-sm">
          <%= @log.notes.presence || "No notes added" %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Exercise log table -->
  <div class="flex flex-col w-full bg-sky-900 text-white p-5 min-h-screen">
    <div class="flex flex-col gap-4">
      <h2 class="text-xl font-bold mb-4">Exercise Log</h2>
      <table class="min-w-full table-auto bg-white text-gray-700">
        <thead>
          <tr>
            <th class="px-4 py-2">Exercise Name</th>
            <th class="px-4 py-2">Sets</th>
            <th class="px-4 py-2">Reps</th>
            <th class="px-4 py-2">Weight</th>
          </tr>
        </thead>
        <tbody>
          <% @log.fitness_log_exercises.each do |exercise| %>
            <% exercise.fitness_log_sets.each do |set| %>
              <tr>
                <td class="border px-4 py-2"><%= exercise.name %></td>
                <td class="border px-4 py-2"><%= set.set_number %></td>
                <td class="border px-4 py-2"><%= set.reps %></td>
                <td class="border px-4 py-2"><%= set.weight || "N/A" %> kg</td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
