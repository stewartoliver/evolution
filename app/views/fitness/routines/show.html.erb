<div class="flex flex-col lg:flex-row">
	<div class="flex flex-col gap-5 lg:w-1/3 p-5">
		<%= link_to 'Back', :back, class: "text-gray-500 underline tracking-wide underline-offset-1" %>
		<div class="flex flex-col tracking-tight leading-tight">
			<div class="text-2xl font-bold uppercase text-sky-900">
				<%= @routine.name %>
			</div>
			<div class="text-gray-500 text-sm">
				/fitness /routines
			</div>
		</div>
		<div class="flex flex-col divide-y divide-gray-200">
			<div class="py-4">
				<div class="flex gap-1 items-center">
					<div class="text-sky-900 text-xl font-semibold">
						Total uses:
					</div>
					<div class="text-gray-500 text-xl">
						0
					</div>
				</div>
			</div>
			<div class="py-4">
				<div class="flex gap-1 items-center">
					<div class="text-sky-900 text-xl font-semibold">
						Recent changes:
					</div>
					<div class="text-gray-500 text-xl">
						0
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="flex flex-col gap-5 w-full bg-sky-900 text-white p-5">
		<table>
			<tbody>
				<% @routine.routine_exercises.each do |exercise| %>
				<tr>
					<td>
						<%= exercise.exercise.name %>
					</td>
					<td>
						
					</td>
					<td>
						
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>